<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Title>Bonsai.ML.Torch</Title>
    <Description>A Bonsai package providing access to LibTorch via TorchSharp. For running on CPU, this package requires installing the Bonsai.ML.Torch-cpu package. For running on GPU, please visit https://bonsai-rx.org/machinelearning/articles/Torch/torch-overview.html for more details.</Description>
    <PackageTags>$(PackageTags) Torch Tensor</PackageTags>
    <TargetFrameworks>net472;netstandard2.0</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="OpenCV.Net" Version="3.4.2" />
    <PackageReference Include="TorchSharp" Version="0.105.0" />
    <PackageReference Include="TorchVision" Version="0.105.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Bonsai.ML\Bonsai.ML.csproj" />
    <ProjectReference Include="..\Bonsai.ML.Data\Bonsai.ML.Data.csproj" />
  </ItemGroup>
</Project>